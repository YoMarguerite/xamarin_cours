<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppConfiguration.Params"
             Title="Mes paramètres">
    <ContentPage.Content>
        <StackLayout>
            <TableView >
                <TableRoot>
                    <TableSection Title="COMPTE">
                        <SwitchCell x:Name="compteActif" Text="Compte actif" On="True" OnChanged="CompteActif_OnChanged" />
                    </TableSection>
                    <TableSection Title="UTILISATEUR">
                        <EntryCell x:Name="email" Text="" Keyboard="Email" Placeholder="Adresse email" Completed="Email_Completed" />
                        <EntryCell x:Name="telephone" Text="" Keyboard="Telephone" Placeholder="Numéro de téléphone" Completed="Telephone_Completed" />
                    </TableSection>
                    <TableSection Title="LOCALISATION">
                        <SwitchCell x:Name="position" Text="Enregistrer position" On="False" OnChanged="Position_OnChanged" />
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>